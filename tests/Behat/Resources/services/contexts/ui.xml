<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service id="app.behat.context.ui.admin.managing_products" class="App\Tests\Behat\Context\Ui\Admin\ManagingProductsContext">
            <argument type="service" id="app.behat.page.admin.product.create_simple"/>
            <argument type="service" id="app.behat.page.admin.product.update_simple"/>
        </service>

        <service id="app.behat.context.ui.shop.product" class="App\Tests\Behat\Context\Ui\Shop\ProductContext">
            <argument type="service" id="app.behat.page.shop.product.show"/>
        </service>
    </services>
</container>
